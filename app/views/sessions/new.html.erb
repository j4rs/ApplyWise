<div class="flex min-h-full flex-col justify-center px-6 py-12 lg:px-8">
  <div class="mt-10 sm:mx-auto sm:w-full sm:max-w-sm">
    <div class="text-center text-xl font-bold">Login</div>
    <%= form_tag(sessions_path, method: :post) do %>
      <div class="space-y-6">
        <div>
          <div class="mt-2">
            <%= email_field_tag :email, nil, required: true, autocomplete: "email", class: "block w-full rounded-md border-0 py-1.5 text-gray-900 shadow-sm ring-1 ring-inset ring-gray-300 placeholder:text-gray-400 focus:ring-2 focus:ring-inset focus:ring-gray-400 sm:text-sm sm:leading-6", placeholder: "Your email address" %>
          </div>
        </div>

        <div>
          <%= submit_tag "Send magic link", class: "flex w-full justify-center rounded-md bg-white px-3.5 py-2.5 text-sm font-semibold text-gray-900 shadow-sm ring-1 ring-inset ring-gray-300 hover:bg-gray-50 cursor-pointer" %>
        </div>
      </div>
    <% end %>
  </div>
</div>

